<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:background="@drawable/setting_more_content_background">
        <Button
            android:id="@+id/btn_sections01"
            android:layout_width="@dimen/top_button_width_height"
            android:layout_height="@dimen/top_button_width_height"
            android:layout_margin="10dp"
            android:background="@drawable/btn_sections01"/>

        <Button
            android:id="@+id/btn_sections02"
            android:layout_width="@dimen/top_button_width_height"
            android:layout_height="@dimen/top_button_width_height"
            android:layout_margin="10dp"
            android:background="@drawable/btn_sections02"/>

        <Button
            android:id="@+id/btn_sections03"
            android:layout_width="@dimen/top_button_width_height"
            android:layout_height="@dimen/top_button_width_height"
            android:layout_margin="10dp"
            android:background="@drawable/btn_sections03"/>
    </LinearLayout>
</LinearLayout>