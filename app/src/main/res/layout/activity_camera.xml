<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.cgfay.caincamera.activity.CameraActivity">
    <com.cgfay.caincamera.view.AspectFrameLayout
        android:id="@+id/layout_aspect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center_horizontal">
        <!--<com.cgfay.caincamera.view.CameraSurfaceView-->
            <!--android:id="@+id/view_camera"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent" />-->
    </com.cgfay.caincamera.view.AspectFrameLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="top">
        <Button
            android:id="@+id/btn_view_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@android:color/darker_gray"
            android:text="@string/btn_view_photo"
            android:layout_alignParentStart="true"/>
        <Button
            android:id="@+id/btn_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@android:color/darker_gray"
            android:text="@string/btn_setting"
            android:layout_centerInParent="true"/>
        <Button
            android:id="@+id/btn_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@android:color/darker_gray"
            android:text="@string/btn_switch_camera"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@android:color/transparent">
        <Button
            android:id="@+id/btn_take"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/btn_take"/>
        <LinearLayout
            android:id="@+id/layout_sticker"
            android:layout_width="match_parent"
            android:layout_height="@dimen/photo_edit_function_height"
            android:orientation="vertical">
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/tv_gif"
                android:layout_width="@dimen/tv_width"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/tv_gif"/>
            <TextView
                android:id="@+id/tv_picture"
                android:layout_width="@dimen/tv_width"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/tv_picture"/>
            <TextView
                android:id="@+id/tv_sticker"
                android:layout_width="@dimen/tv_width"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/tv_sticker"/>
            <TextView
                android:id="@+id/tv_video"
                android:layout_width="@dimen/tv_width"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="@string/tv_video"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
